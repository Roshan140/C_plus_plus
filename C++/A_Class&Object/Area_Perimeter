#include<iostream>
using namespace std;

class area_perimeter{
int a,p,l,b;
public:
void length_breadth(){
    cout<<"Enter :";
    cin>>l>>b;
}
void area(){
    a=l*b;
    cout<<"The are is :"<<a<<endl;
}
void perimeter(){
    p=2*(l+b);
    cout<<"The Perimeter is :"<<p;
}
};

int main(){
    area_perimeter r;
    r.length_breadth();
    r.area();
    r.perimeter();
    return 0;
}

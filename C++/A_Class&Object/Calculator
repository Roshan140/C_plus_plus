#include<iostream>
using namespace std;

class s{
int i,n,a;
float result;
char c;
public:
void get(){
cout<<"Enter how many number sum do you want";
cin>>n;


cout<<"Enter + - * or /";
cin>>c;
}
void dis(){
switch(c){
  
     
    case '+':result = 0;
   for(i=0;i<n;i++){
    cout<<"Enter numbers";
    cin>>a;
    result = result + a;
}
cout<<""<<result; 
break;

  
case '-':result = 0;
   for(i=0;i<n;i++){
    cout<<"Enter numbers";
    cin>>a;
    result = result - a;
}
cout<<""<<result; 
break;

  
case '*':result = 1;
   for(i=0;i<n;i++){
    cout<<"Enter numbers";
    cin>>a;
    result = result * a;
}
cout<<""<<result; 
break;

  
case '/':result = 1;
   for(i=0;i<n;i++){
    cout<<"Enter numbers";
    cin>>a;
    result = result / a;
}
cout<<""<<result; 
break;
default:
 cout << "Please enter a correct symbol \n";

}
}
};

int main(){
s o;
o.get();
o.dis();
return 0;
}